extends layout

block content
  h1= title
  button.btn.btn-primary(onClick=`dispatch(\"/restaurant/create\")`) Create Restaurant
  - var items  = results;
  div(class="container-fluid")
    div(class="row m-1")
      each v,index  in items 
        - let destination = `dispatch(\"/restaurant/update?id=${v._id}\")`
        - let details = `dispatch(\"/restaurant/detail?id=${v._id}\")`
        - let deleteItem = `dispatch(\"/restaurant/delete?id=${v._id}\")`
        div(class="col-sm-2" class="m-1"  ) #{v.name}, #{v.place}, #{v.bill}
          div(class="row")
            button.btn( class="btn-primary ml-1", onclick= destination) Update
            button.btn.btn-success.m-2(onclick=details) View Details
            button.btn.btn-danger.m-2(onclick=deleteItem) Delete
  script.
   function dispatch(path){
        window.location.href=path
     }
       































































  